@model Tuturno.Models.modelPrincipal
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TuturnoXD</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery-3.6.1.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="~/Scripts/autorizacionjs.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="~/Content/StyleMenu.css" rel="stylesheet" />
    <link href="~/Content/StyleLayout.css" rel="stylesheet" />
    <script src="~/Scripts/animaciones.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <script>window.rwbp = { email: 'fredo199575@gmail.com', phone: '+522241108168', message: '¡Hola!, Duda o sugerencia, contacta al desarrollador', lang: 'es' }</script>
    <script defer async src='https://duz4dqsaqembt.cloudfront.net/client/whats.js'></script>

</head>
<body>


    <nav class="navbar navbar-expand-sm navbar-dark fixed-top " style="background-color: #133A4B;">
        <div class="container-fluid">
            <div class="navbar-brand" href="javascript:void(0)"> <img src="~/imagenes/turno.jpg" alt="Logo" style="width:40px;" class="rounded-pill"> </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <b> <a class="nav-link" style="color:white;  text-shadow: 2px 2px 2px gray;">TUTURNO-XD</a></b>
                    </li>
                </ul>
                <div class="d-flex">
                    <ul class="navbar-nav me-auto">
                        <li class="p-2 "> <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#ModalAutorizacion">Administrar</a></li>
                        <li class="p-2 "> <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#ModalAutorizacion">Ajustar turno</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="loader">

    </div>
    @if (Convert.ToBoolean(TempData["VerTodo"]))
    {
        <div id="mySidenav" class="sidenav animate__animated animate__fadeInRight ">
            <a data-bs-toggle="tooltip" title="Saber a quien le toca el agua" href="@Url.Action("Index","Home")" id="agua" class=" bg-info">Agua</a>
            <a data-bs-toggle="tooltip" title="Saber a quien le toca limpiar el refrigerador y el microondas" href="@Url.Action("Index2","Home")" id="refri" style=" background-color: #08AB98;">Refri&Micro</a>
            <a data-bs-toggle="tooltip" title="¿Quien cumple años hoy?" href="@Url.Action("Index3","Home")" id="cumple" style="background-color: #BA8EC3;">Cumpleaños</a>
            <a data-bs-toggle="tooltip" title="¿Gustas pedir un dulce?" href="@Url.Action("tienda","Home")" id="dulceria" style="background-color: #8516F3;">Dulcería</a>
        </div>
    }

    <br /><br /><br />
                <div class="container body-content">

                    @RenderBody()
                    @{
                        string Area = "";
                        DateTime fechaCumpleañero = Model.fecha;
                        DateTime proximoCumple;
                        proximoCumple = new DateTime(DateTime.Now.Year, fechaCumpleañero.Month, fechaCumpleañero.Day);
                        TimeSpan faltan = proximoCumple.Subtract(DateTime.Now);
                        if (Convert.ToBoolean(TempData["VerTodo"]))
                        {
                            <div class="content content2 toast show animate__animated animate__backInLeft" style="position: absolute; top: 100px; left: 0px; z-index: 1; font-size: 16px; display: none;">
                                <div class="toast-header">
                                    <strong class="me-auto">Próximo <a href="@Url.Action("Index3","Home")" style="color: #133A4B; text-decoration: none;">cumpleaños</a>,@fechaCumpleañero.Day de @fechaCumpleañero.ToString("MMMM") <i class='fas fa-birthday-cake'></i></strong>
                                    <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
                                </div>
                                <div class="toast-body">
                                    <h4>@Model.nombre</h4>
                                    Faltan:<h4> @faltan.Days días: @faltan.Hours Horas: @faltan.Minutes Minutos</h4>
                                </div>
                            </div>
                            Area = "SIT";
                        }
                        else
                        {
                            Area = "No identificado";
                        }

                    }
                    <hr />

                    <footer>
                       
                        @*****************************************************Cambios aplicados*******************@
                        @*<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 1.0.17.11.2022</p> -Solo tenia el calendario de agua*@
                        @*<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 2.0.8.12.2022</p> - Solo se agregó Calendarío de limpieza de Refrigerador y Microondas*@
                        @*<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 2.0.05.01.2023</p> - Solo se agregó Calendario de cumpleaños*@
                        @*<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 3.0.10.01.2023</p> - Se agregó Boton de whatssap y calculo de próximo cumpleaños*@
                        @*<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 3.1.10.01.2023</p>  - Se agregó imagen de carga*@
                        @**<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 3.2.25.01.2023</p> -Se agregó una bitacora de registro de visitas*@
                        @*<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 4.3.07.03.2023</p> @*-Se agregó modulo para dulcería, publicar productos y que todos lo puedan ver y pedir por whatssap*@
                        @*<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 4.4.29.03.2023</p> @*-Se corrió el error de calcular el próximo cumpleaños *@
                        @*<p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 4.5.30.03.2023</p> @*-Se modificó la vista tienda, se agregaron tooltips, y se modificó el botón whattsapp *@
                        <p>&copy; @DateTime.Now.Year - Tecnologías .NET - AF - V. 4.6.04.04.2023 / @Area</p> @*-Se agregó funcionalidad para restringir el acceso a todas las vistas, solo cartografía podrá ver todas las vistas *@
                    </footer>
                </div>

    <!-- The Modal -->
    <div class="modal" id="ModalAutorizacion">
        <div class="modal-dialog ">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header text-center">
                    <h4 class="modal-title">Autorización</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-5">
                            <input type="password" id="pwd" class="form-control" placeholder="Ingresa contraseña" name="password">
                        </div>
                        <div class="col-sm-2">
                            <input type="text" id="tTurno" class="form-control" placeholder="Tipo de turno" name="tipoTurno" />
                        </div>
                        <div class="col-sm-5">
                            <button type="button" id="btnConfirmar" class="btn btn-primary" onclick="autorizacion()">Confirmar</button>
                            @*<input type="submit" name="btnConfirmar" class="btn btn-primary" value="Confirmar" />*@
                        </div>
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                </div>

            </div>
        </div>
    </div>

    <script>

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
        $(window).load(function () {
            $(".loader").fadeOut("slow");
        });

    </script>

</body>
</html>
